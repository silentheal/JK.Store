@model CodingTemple.BoardGameStore.Models.StudentModel
@{
    ViewBag.Title = "edit";
}

<h2>edit: @Model.FirstName @Model.LastName</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.FirstName, new { @class = "form-label" })
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.LastName, new { @class = "form-label" })
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FavoriteFood, new { @class = "form-label" })
        @Html.TextBoxFor(x => x.FavoriteFood, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(x => x.ID)
    <input type="submit" class="btn btn-default" />
}
